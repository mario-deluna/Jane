## PHP equivalent

<?php

use Jane/Utils/Input;
use Jane/Exception/RuntimeException;

$name = "";

if ( !$jn_input_get = Input::get( 'name' ) )
{
	$jn_input_get = "World";
}

$name = $jn_input_get;
unset( $jn_input_get );

if ( !is_string( $name ) )
{
	throw new RuntimeException( 'invalid string passed to $name' );
}